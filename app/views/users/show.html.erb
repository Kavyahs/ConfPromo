<h1>Hi <%= @user.user_name %>!</h1>
<%= button_tag "start",:id=>"start" %>
<div class="box active">
	<div id="countdown"></div>
</div><br><br>
<%= form_for :uanswer, url: user_path(@question,@user), :method => :patch do |f|%>
<%=  @i +=1 %>
<%= @question.question %><br><br>
<% @choices.each do |choice| %>
<%= f.radio_button :choosen_answer,  choice.qoption_id %>
<%= choice.qoption_text %><br><br>
<% end %><br><br>

<%= f.submit "Next"%>
<% end %>
